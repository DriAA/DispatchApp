<%- include("../../partials/landing/header.ejs")%>


    <div class="bg-light">
        <div class="container py-4">
            <h1 class="display-1">Lorem ipsum </h1>
            <p class="text-muted lead">Lorem ipsum dolor sit, amet consectetur adipisicing elit. </p>
        </div>
    </div>
    <div class="container my-4">
        <h4 class="display-6">
            Contact Information
        </h4>
    </div>
    <div class="container">
        <div class="row pb-5">
            <div class="col-sm-6">
                <form class="row g-3" method="POST" action="/contact">
                    <div class="col-md-6">
                        <label for="inputFirstname" class="form-label">First Name</label>
                        <input type="text" class="form-control" id="inputFirstName" name='contact[name][first]'>
                    </div>
                    <div class="col-md-6">
                        <label for="inputLastName" class="form-label">Last Name</label>
                        <input type="text" class="form-control" id="inputLastName" name='contact[name][last]'>
                    </div>
                    <div class="col-md-12">
                        <label for="inputEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="inputEmail" name="contact[email]">
                    </div>
                    <div class="col-md-12">
                        <label for="inputPhone" class="form-label">Phone Number</label>
                        <input type="text" class="form-control" id="inputPhone" name="contact[phoneNumber]">
                    </div>
                    <div class="col-12">
                        <label for="inputMessage">Message</label>
                        <textarea class="form-control" id="inputMessage" style="height: 100px"
                            name="contact[message]"></textarea>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <div class="col-sm-6">
                <div class="container my-4">
                    <section>
                        <h4 class="fw-bold">Store Name</h4>
                        <p class="lead">
                            1234 Main St. <br>
                            City, State Zip <br>
                            United States
                        </p>
                    </section>
                    <section>
                        <h4 class="fw-bold">Contact</h4>
                        <p class="lead">
                            <span>First Name Last Name</span> <br>
                            <span>### ### ####</span> <br>
                            <span> sample@email.com</span>
                        </p>
                    </section>
                </div>
            </div>
        </div>
    </div>

<%- include("../../partials/landing/footer.ejs")%>