<%- include("../../partials/driver/header.ejs")%>
<div class="container my-5">
    <div class="shadow card bg-light">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <h1 class="display-5"><%= selectedDriver.firstName %> <%=  selectedDriver.lastName %>  </h1>
                </div>
                <div class="col-6 text-end  my-auto">
                    <span class="badge rounded-pill bg-success px-3">Active</span>
                </div>
            </div>
        </div>
        <div class="card-body p-5">
                <div class="row">
                    <div class="col-6">
                        <img class="img-fluid border rounded w-50" src="<%= selectedDriver.image%>">
                    </div>
                    <div class="col-12 mt-5">
                        <h1 class="display-6 fw-bold mb-3">Driver Details</h1>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item bg-light">
                                <div class="row">
                                    <div class="col-2 text-end">Name: </div>
                                    <div class="col-10"><%= selectedDriver.firstName %> <%=  selectedDriver.lastName %></div>
                                </div>
                            </li>
                            <li class="list-group-item bg-light">
                                <div class="row">
                                    <div class="col-2 text-end">Date of Birth: </div>
                                    <div class="col-10"><%= selectedDriver.DOB %></div>
                                </div>
                            </li>
                            <li class="list-group-item bg-light">
                                <div class="row">
                                    <div class="col-2 text-end">Mobile: </div>
                                    <div class="col-10"><%= selectedDriver.mobile %></div>
                                </div>
                            </li>
                            <li class="list-group-item bg-light">
                                <div class="row">
                                    <div class="col-2 text-end">Email: </div>
                                    <div class="col-10"><%= selectedDriver.email %></div>
                                </div>
                            </li>
                            <li class="list-group-item bg-light">
                                <div class="row">
                                    <div class="col-2 text-end">Address: </div>
                                    <div class="col-10">
                                        <%= selectedDriver.address.address1 %>
                                        <br><%= selectedDriver.address.address2 %> 
                                        <br><%= selectedDriver.address.city %>
                                        <br><%= selectedDriver.address.state %>
                                        <br><%= selectedDriver.address.postal %>
                                        <br><%= selectedDriver.address.country %>
                                    </div>
                                </div>
                            </li>
                            <li class="list-group-item bg-light">
                                <div class="row">
                                    <div class="col-2 text-end">Truck Number: </div>
                                    <div class="col-10"><%= selectedDriver.truck.number %></div>
                                </div>
                            </li>
                            <li class="list-group-item bg-light">
                                <div class="row">
                                    <div class="col-2 text-end">Trailer Type: </div>
                                    <div class="col-10"><%= selectedDriver.trailer.equipment %></div>
                                </div>
                            </li>
                            <li class="list-group-item bg-light">
                                <div class="row">
                                    <div class="col-2 text-end">Trailer Number: </div>
                                    <div class="col-10"><%= selectedDriver.trailer.number %></div>
                                </div>
                            </li> 
                        </ul>
                    </div>

                </div>

                <div class="mt-3">
                    <form class="d-inline" action="/app/<%= selectedCompany._id %>/driver/<%= selectedDriver._id %>/edit  ">
                        <button class="btn btn-warning" type="submit">Edit Driver</button>
                    </form>
                    <form class="d-inline" action="/app/<%= selectedCompany._id %>/driver/<%= selectedDriver._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger" type="submit">Delete Driver</button>
                    </form>
                </div>
        </div>
    </div>
</div>
<%- include("../../partials/driver/footer.ejs")%>
