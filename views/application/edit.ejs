<%- include("../../partials/application/header.ejs")%>

<div class="container">
    <form action="/app/<%=selectedCompany._id%>/edit?_method=PUT" method="POST" class="m-5">
          <h1 class="display-4 lead mb-5">Edit Company</h1>
    <div class="row mb-3">
      <label for="inputCompanyName" class="col-sm-2 col-form-label">Company Name:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputCompanyName" name="company[name]" value="<%= selectedCompany.name %>">
      </div>
    </div>
    <div class="row mb-3">
      <label for="inputMC" class="col-sm-2 col-form-label">MC:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputMC" name="company[mc]" value="<%=selectedCompany.mc%>">
      </div>
    </div>
    <div class="row mb-3">
        <label for="inputDot" class="col-sm-2 col-form-label">DOT</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="inputDot" name="company[dot]" value="<%=selectedCompany.dot%> ">
        </div>
      </div>
      <div class="row mb-5">
        <label for="inptTaxID" class="col-sm-2 col-form-label">Tax-ID:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="inptTaxID" name="company[taxID]" value="<%=selectedCompany.taxID%>">
        </div>
      </div>
      <div class="row mb-5">
        <label for="inputContact" class="col-sm-2 col-form-label">Contact Detail:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control mb-3" id="inputContactTitle" name="company[contact][title]" placeholder="Title"  value="<%=selectedCompany.contact.title%>">
          <input type="text" class="form-control mb-3" id="inputContactFirstName" name="company[contact][firstName]" placeholder= 'First Name'  value="<%=selectedCompany.contact.firstName%>">
          <input type="text" class="form-control mb-3" id="inputContactLastName" name="company[contact][lastName]" placeholder= 'Last Name'  value="<%=selectedCompany.contact.lastName%>">
          <input type="text" class="form-control mb-3" id="inputContactMobile" name="company[contact][mobile]" placeholder= 'Phone Number'  value="<%=selectedCompany.contact.mobile%>">
          <input type="text" class="form-control" id="inputContactEmail" name="company[contact][email]" placeholder= 'email'  value="<%=selectedCompany.contact.email%>">
        </div>
      </div>
      <div class="row mb-5">
        <label for="inputBilling" class="col-sm-2 col-form-label">Billing Detail:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control mb-3" name="company[billing][address1]" placeholder="Address 1" value="<%=selectedCompany.billing.address1%>">
            <input type="text" class="form-control mb-3" name="company[billing][address2]" placeholder="Address 2" value="<%=selectedCompany.billing.address2%>">
            <input type="text" class="form-control mb-3" name="company[billing][city]" placeholder="city" value="<%=selectedCompany.billing.city%>">
            <input type="text" class="form-control mb-3" name="company[billing][state]" placeholder="State" value="<%=selectedCompany.billing.state%>">
            <input type="text" class="form-control mb-3" name="company[billing][postal]" placeholder="Postal" value="<%=selectedCompany.billing.postal%>">
            <input type="text" class="form-control" name="company[billing][country]" placeholder="Country" value="<%=selectedCompany.billing.country%>">
        </div>
      </div>
      <div class="row">
        <button class="btn btn-warning w-100 mb-3" type="submit">Update</button>
        <a href="/app/<%=selectedCompany._id%>" class="btn btn-secondary">Go Back</a>
        </form>
    
</div>

<%- include("../../partials/application/footer.ejs")%>
